{
  "name": "Seller App 2 Test Suite",
  "description": "Automated testing for SellerApp2 using TestSprite",
  "platform": "android",
  "appId": "com.sellerapp2",
  "capabilities": {
    "appium:automationName": "UiAutomator2",
    "appium:deviceName": "emulator-5554",

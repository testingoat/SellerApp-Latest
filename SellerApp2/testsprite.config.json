      "name": "Authentication Tests",
      "description": "Test user authentication flows",
      "tests": [
        {
          "name": "Login Screen Elements",
          "steps": [
            {
              "action": "launchApp",
              "params": {}
            },
            {
              "action": "waitForElement",
              "params": {
                "selector": {
                  "type": "accessibilityId",
                  "value": "LoginScreen"
                },
                "timeout": 10000
              }
            },
            {
              "action": "elementVisible",
              "params": {
                "selector": {
                  "type": "accessibilityId",
                  "value": "LoginScreen"
                }
              }
            }
          ]
        },
